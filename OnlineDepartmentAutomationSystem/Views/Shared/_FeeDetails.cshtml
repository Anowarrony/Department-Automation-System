@using OnlineDepartmentAutomationSystem.Models
@model IEnumerable<OnlineDepartmentAutomationSystem.Models.StudentFeeViewModel>


<table class="table table-bordered">
    
  
     
  

@foreach (var item in (IEnumerable<StudentFeeViewModel>)ViewData["feeDetails"])
{
    <tr>
        <td style="font-size: 20px;font-weight: bold;background: forestgreen;color: white">Sectors</td><td style="font-size: 20px;font-weight: bold;background: forestgreen;color: white">Taka</td>
    </tr>
    
    <tr>
        <td>   @Html.DisplayNameFor(model => model.AdmissionFee) <span style="color: darkgray">(Yearly)</span></td>
        <td>
            @Html.DisplayFor(modelItem => item.AdmissionFee)
        </td> 

    </tr> 
    <tr>
        
          <td>
            @Html.DisplayNameFor(model => model.CreditHourFee) <span style="color: darkgray">(Per Course)</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreditHourFee)
        </td> 

    </tr> 
    <tr>
         <td>
            @Html.DisplayNameFor(model => model.StudentTrustFund) <span style="color: darkgray">(Yearly)</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentTrustFund)
        </td> 

    </tr> 
    <tr>
        <td>
                          @Html.DisplayNameFor(model => model.HallRent) <span style="color: darkgray">(Yearly)</span>
                      </td>
        <td>
            @Html.DisplayFor(modelItem => item.HallRent)
        </td>  

    </tr> 
     <tr>  <td>
            @Html.DisplayNameFor(model => model.CentralLibraryFee) <span style="color: darkgray">(Yearly)</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CentralLibraryFee)
        </td> 

     </tr> 
    <tr>
          <td>
            @Html.DisplayNameFor(model => model.SeminarLibraryFee) <span style="color: darkgray">(Yearly)</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeminarLibraryFee)
        </td>  

    </tr> 
    
    <tr>
           <td>
            @Html.DisplayNameFor(model => model.NonResidentialTransfortFee) 
