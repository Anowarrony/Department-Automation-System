        <td>
            @Html.DisplayFor(modelItem => item.NonResidentialTransfortFee)
        </td> 

    </tr> 
    
    <tr>
          <td>
            @Html.DisplayNameFor(model => model.ResidentialTransfortFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResidentialTransfortFee)
        </td> 

    </tr> 
    
     <tr>   <td>
            @Html.DisplayNameFor(model => model.LateFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LateFee)
        </td>  

     </tr>  
    <tr>    <td>
                          @Html.DisplayNameFor(model => model.Others)
                      </td>
        <td>
            @Html.DisplayFor(modelItem => item.Others)
        </td> 

    </tr>
      <tr>     <td>
            @Html.DisplayNameFor(model => model.BacklogFeePerCourse) <span style="color: darkgray">(Per Course)</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BacklogFeePerCourse)
        </td> 

      </tr> 
   
    <tr>
         @if (ViewBag.hide!= 1)
     {
         <td style="text-align: center">
            <a href="@Url.Action("UpdateStudentFee","Admin",new{id=item.Id})" class="lnkEdit k-button ">
          
                <img src="~/Content/icon-edit.png" />
                Edit
            </a>
            <a href="@Url.Action("DeleteStudentFee","Admin",new{id=item.Id})" class="lnkDelete  k-button">
                <img src="~/Content/icon-delete.png" />
                 
                Delete
            </a>
                          
            

        
        </td> 
     }
        

    </tr>
  
